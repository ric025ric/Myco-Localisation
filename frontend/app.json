{
  "expo": {
    "name": "Myco Localisation",
    "slug": "myco-localisation",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mushroom-finder",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cette app utilise la localisation pour marquer les endroits où vous trouvez des champignons.",
        "NSCameraUsageDescription": "Cette app utilise la caméra pour prendre des photos des champignons que vous trouvez."
      }
    },
    "android": {
      "package": "com.skyrico.mycolocalisation",
      "versionCode": 10,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBDA7N8JVBfnyJLarJPsSGjPjQhq1tX3dc"
        }
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Cette app utilise la localisation pour marquer les endroits où vous trouvez des champignons."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Cette app utilise la galerie pour sélectionner des photos de champignons.",
          "cameraPermission": "Cette app utilise la caméra pour prendre des photos des champignons que vous trouvez."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1a1a1a"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7a66c6c0-9d46-462c-998d-ad882b78ce8a"
      }
    }
  }
}
